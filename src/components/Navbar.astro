---
const links = [
  {
    title: 'About me',
    section: '#aboutme',
  },
  {
    title: 'FAQ',
    section: '#faq',
  },
  {
    title: 'Help',
    section: '#help',
  },
];
---

<div class='nav h-14 w-full'>
  <!-- TODO: Try with focus/button -->
  <input type='checkbox' id='nav-check' class='hidden' checked />
  <div class='nav-header inline'>
    <div class='inline-block text-2xl text-white p-3'>JoGeek</div>
  </div>

  <div class='inline-block absolute right-0 top-0 md:hidden'>
    <label for='nav-check' class='inline-block w-14 h-14 p-3'>
      <span class='block w-6 h-3 border-t-2 border-white'></span>
      <span class='block w-6 h-3 border-t-2 border-white'></span>
      <span class='block w-6 h-3 border-t-2 border-white'></span>
    </label>
  </div>

  <div
    class='nav-links block absolute h-0 top-14 left-0 text-lg float-right transition-all ease-in duration-300 md:inline md:static max-md:w-full max-md:overflow-y-hidden'
  >
    {
      links.map((data) => (
        <a
          class='block text-white py-3 px-2 md:inline-block max-md:w-full'
          href={data.section}
        >
          {data.title}
        </a>
      ))
    }
  </div>
</div>

<style>
  .nav {
    background-color: #4d4d4d;
  }

  .nav > .nav-links {
    /* display: inline; */
