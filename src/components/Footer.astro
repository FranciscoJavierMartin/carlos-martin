---
import logo from '../assets/logo.svg';
import { Image } from 'astro:assets';
import Divider from './divider/Divider.astro';
---

<div class='text-blue-steel -mb-[1px]'>
  <Divider />
</div>
<footer
  class='flex justify-between py-14 px-5 w-full bg-blue-steel text-white font-extralight'
>
  <Image
    src={logo}
    height='171'
    width='300'
    alt='Carlos Martin'
    class='w-1/4'
  />
  <div class='text-xl text-center'>
    <span class='font-semibold'>Legales:</span>
    <ul class='underline mt-6'>
      <li>Aviso legal</li>
      <li>Politica de cookies</li>
      <li>Politica de privacidad</li>
    </ul>
  </div>
  <div class='text-xl text-center'>
    <span class='font-semibold'>Redes sociales y contacto:</span>
    <ul class='underline mt-6'>
      <li><a href='#'>WhatsApp</a></li>
      <li>
        <a
          href='https://www.instagram.com/psico.carlosmartin?igsh=MWIza2ZoM2Z4YjJrOQ%3D%3D&utm_source=qr'
          >Instagram</a
        >
      </li>
      <li><a href='mailto:carlosmartin.psideportivo@gmail.com'>Email</a></li>
    </ul>
  </div>
</footer>
